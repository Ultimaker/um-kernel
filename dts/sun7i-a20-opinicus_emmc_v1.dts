#include "sun7i-a20-olinuxino-lime2-emmc.dts"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/pinctrl/sun4i-a10.h>
#include <dt-bindings/pwm/pwm.h>

/ {
	model = "Opinicus v1 addon board to the Olimex OLinuXino Lime2-A20-eMMC";
	compatible = "ultimaker,opinicus-emmcv1", "olimex,a20-olinuxino-lime2", "allwinner,sun7i-a20";

	aliases {
		serial1 = &uart3;
	};

	beeper {
		pwm-names = "opinicus-board-beeper";
		compatible = "pwm-beeper";
		pwms = <&pwm_gpio 0 500000 0>;
		status = "okay";
	};

	leds {
		green {
			linux,default-trigger = "mmc0";
		};

		d1 {
			label = "opinicus:orange:d1";
			gpios = <&pio 7 20 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		d2 {
			label = "opinicus:orange:d2";
			gpios = <&pio 7 21 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	pwm_fan {
		pwm-names = "opinicus-board-fan";
		compatible = "pwm-fan";
		pwms = <&pwm 1 500000 0>;
		status = "okay";
	};

	pwm_gpio: pwm_gpio@0 {
		pinctrl-names = "default";
		pinctrl-0 = <&pwm_gpio_pins_opinicus>;
		compatible = "pwm-gpio";
		#pwm-cells = <3>;
		pwm-gpios = <&pio 8 2 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	rotary {
		pinctrl-names = "default";
		pinctrl-0 = <&rotary_pins_opinicus>;
		compatible = "rotary-encoder";
		gpios = <&pio 7 8 GPIO_ACTIVE_LOW>, <&pio 7 7 GPIO_ACTIVE_LOW>; /* todo; named gpios!! */
		linux,axis = <8>; /* REL_Z: TODO add to dt-include and possible add 'LEFT' axis */
		rotary-encoder,relative-axis;
		status = "okay";
	};
};

&codec {
	routing =
		"Headphone Jack", "HP Left",
		"Headphone Jack", "HP Right";
	status = "okay";
};

&i2c3 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c3_pins_a>;
	clock-frequency = <200000>;
	status = "okay";

	ssd1309: oled@3c {
		compatible = "solomon,ssd1309fb-i2c";
		pinctrl-names = "default";
		pinctrl-0 = <&oled_pins_opinicus>;
		reg = <0x3c>;
		reset-gpios = <&pio 8 13 GPIO_ACTIVE_HIGH>;
		solomon,width = <128>;
		solomon,height = <64>;
		solomon,com-invdir;
		solomon,page-offset = <0>;
		solomon,prechargep1 = <2>;
		solomon,prechargep2 = <8>;
	};

	pca9632: pca9632@60 {
		compatible = "nxp,pca9632";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x60>;
		nxp,totem-pole;
		nxp,inverted-out;
		nxp,hw-blink;

		red@0 {
			label = "red";
			reg = <0>;
			linux,default-trigger = "none";
		};

		green@1 {
			label = "green";
			reg = <1>;
			linux,default-trigger = "default-on";
		};

		blue@2 {
			label = "blue";
			reg = <2>;
			linux,default-trigger = "default-on";
		};

		unused@3 {
			label = "unused";
			reg = <3>;
			linux,default-trigger = "none";
		};
	};
};

&lradc {
	vref-supply = <&reg_vcc3v0>; /* move to lime define, maybe whole thing */
	status = "okay";

	button@0 {
		label = "Encoder click";
		linux,code = <KEY_ENTER>;
		channel = <0>;
		voltage = <0>;
	};
};

&pio {
	led_pins_opinicus: led_pins@0 {
		allwinner,pins = "PH20";
		allwinner,function = "gpio_out";
		allwinner,drive = <SUN4I_PINCTRL_20_MA>;
		allwinner,pull = <SUN4I_PINCTRL_NO_PULL>;
	};

	oled_pins_opinicus: oled_pins@0 {
		allwinner,pins = "PI13";
		allwinner,function = "gpio_out";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_DOWN>;
	};

	pwm_gpio_pins_opinicus: pwm_gpio_pins@0 {
		allwinner,pins = "PI2", "PI7", "PI8";
		allwinner,function = "gpio_out";
		allwinner,drive = <SUN4I_PINCTRL_20_MA>;
		allwinner,pull = <SUN4I_PINCTRL_NO_PULL>;
	};

	rotary_pins_opinicus: rotary_pins@0 {
		allwinner,pins = "PH7", "PH8";
		allwinner,function = "gpio_in";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_UP>;
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm1_pins_a>;
	status = "okay";
};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";
};

&spi2 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi2_pins_a>;
	status = "okay";

	spidev@0 {
		compatible = "spidev";
		spi-max-frequency = <25000000>;
		reg = <0>;
	};
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins_a>;
	status = "okay";
};

&usb_otg {
	dr_mode = "host";
};

&usbphy {
	/* Unset otg detect pins as we force dr_mode */
	/delete-property/ usb0_id_det-gpio;
	/delete-property/ usb0_vbus_det-gpio;
};
