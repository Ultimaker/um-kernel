#include "sun7i-a20-olinuxino-lime2-emmc.dts"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/pinctrl/sun4i-a10.h>
#include <dt-bindings/pwm/pwm.h>

/ {
	model = "Opinicus v1 addon board to the Olimex OLinuXino Lime2-A20-eMMC";
	compatible = "ultimaker,opinicus-emmcv1", "olimex,a20-olinuxino-lime2", "allwinner,sun7i-a20";

	aliases {
		serial1 = &uart3;
		serial2 = &uart7;
	};

	vdd_hd_display: vdd_hd_display_reg {
		compatible ="regulator-fixed";
		regulator-name = "vdd-hd-display-supply";
		pinctrl-names = "default";
		pinctrl-0 = <&hd_display_power>;
		gpio = <&pio 7 8 GPIO_ACTIVE_HIGH>;
		enable-active-high;
		regulator-boot-on;
	};

	hd_display_bl: hd_display_bl {
		compatible = "pwm-backlight";
		//pinctrl-names = "default";
		//pinctrl-0 = <&bl_power_opinicus>;
		//enable-gpios = <&pio 7 8 GPIO_ACTIVE_HIGH>;
		power-supply = <&vdd_hd_display>;
		pwms = <&pwm 0 8333334 PWM_POLARITY_INVERTED>;
		brightness-levels = <0 1 2 4 6 8 11 15 20 25 31 39 47 56 67
				     79 92 107 123 141 160 181 204 228 255>;
		default-brightness-level = <20>;
	};

	beeper {
		pwm-names = "opinicus-board-beeper";
		compatible = "pwm-beeper";
		pwms = <&pwm 1 500000 0>;
		status = "okay";
	};

	leds {
		green {
			linux,default-trigger = "mmc0";
		};

		d1 {
			label = "opinicus:orange:d1";
			gpios = <&pio 7 20 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		d2 {
			label = "opinicus:orange:d2";
			gpios = <&pio 7 21 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	max98357a: max98357a {
		compatible = "maxim,max98357a";
		status = "okay";
	};


//	panel: panel {
//		compatible = "olimex,lcd-olinuxino-43-ts";
//		#address-cells = <1>;
//		#size-cells = <0>;
//		pinctrl-names = "default";
//		pinctrl-0 = <&lcd0_rgb888_pins>;
//		backlight = <&hd_display_bl>;

//		port {
//			#address-cells = <1>;
//			#size-cells = <0>;

//			rgb_in_tcon0: endpoint@0 {
//				reg = <0>;
//				remote-endpoint = <&tcon0_out_rgb>;
//			};

		//	rgb_in_tcon1: endpoint@1 {
		//		reg = <1>;
		//		remote-endpoint = <&tcon1_out_rgb>;
		//	};
//		};
//	};

	rotary {
		pinctrl-names = "default";
		pinctrl-0 = <&rotary_pins_opinicus>;
		compatible = "rotary-encoder";
		gpios = <&pio 7 0 GPIO_ACTIVE_LOW>, <&pio 7 7 GPIO_ACTIVE_LOW>; /* todo; named gpios!! */
		linux,axis = <8>; /* REL_Z: TODO add to dt-include and possible add 'LEFT' axis */
		rotary-encoder,relative-axis;
		rotary-encoder,steps-per-period = <4>;
		status = "okay";
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "Main speaker output";
		simple-audio-card-format = "i2s";
		simple-audio-card,mclk-fs = <256>;
		status = "okay";
		simple-audio-card,cpu {
			sound-dai = <&i2s0>;
		};
		simple-audio-card,codec {
			sound-dai = <&max98357a>;
		};
	};
};

&codec {
	status = "okay";
};

&de {
	status = "okay";
};

&hdmi {
	status = "okay";
};

&hdmi_i2c {
	clock-frequency = <400000>;

	hy4613: hy461x@38 {
		compatible = "hycon,hy4613";
		reg = <0x38>;
		poll-interval = <50>;
		touchscreen-max-size-x = <800>;
		touchscreen-min-size-y = <320>;
	};
};

&i2c1 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins_a>;
	clock-frequency = <400000>;
	status = "okay";

	cabin_lights: button@61 {
		compatible = "nxp,pca9632";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x61>;
		nxp,totem-pole;
		nxp,inverted-out;
		nxp,hw-blink;

		red@0 {
			label = "red:cabin_lights";
			reg = <0>;
			linux,default-trigger = "none";
		};

		green@1 {
			label = "green:cabin_lights";
			reg = <1>;
			linux,default-trigger = "none";
		};

		blue@2 {
			label = "blue:cabin_lights";
			reg = <2>;
			linux,default-trigger = "none";
		};

		unused@3 {
			label = "white:cabin_lights";
			reg = <3>;
			linux,default-trigger = "default-on";
		};
	};
};

&i2c2 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c2_pins_a>;
	clock-frequency = <50000>;
	status = "okay";
};

&i2c3 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c3_pins_a>;
	clock-frequency = <400000>;
	status = "okay";

	ssd1309fb: ssd130x@3c {
		compatible = "solomon,ssd1309fb-i2c";
		pinctrl-names = "default";
		pinctrl-0 = <&oled_pins_opinicus>;
		reg = <0x3c>;
		reset-gpios = <&pio 8 13 GPIO_ACTIVE_HIGH>;
		solomon,width = <128>;
		solomon,height = <64>;
		solomon,com-invdir;
		solomon,page-offset = <0>;
		solomon,prechargep1 = <2>;
		solomon,prechargep2 = <8>;
	};

	br: button@60 {
		compatible = "nxp,pca9632";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x60>;
		nxp,totem-pole;
		nxp,inverted-out;
		nxp,hw-blink;

		red@0 {
			label = "red:button_ring";
			reg = <0>;
			linux,default-trigger = "none";
		};

		green@1 {
			label = "green:button_green";
			reg = <1>;
			linux,default-trigger = "default-on";
		};

		blue@2 {
			label = "blue:button_blue";
			reg = <2>;
			linux,default-trigger = "default-on";
		};

		unused@3 {
			label = "unused";
			reg = <3>;
			linux,default-trigger = "backlight";
		};
	};
};

&i2s0 {
	pinctrl-names = "default";
//	pinctrl-0 = <&i2s0_bclk_pins_a>, <&i2s0_lrclk_pins_a>, <&i2s0_sdo_pins_a>;
	status = "okay";
};

&lradc {
	vref-supply = <&reg_vcc3v0>; /* move to lime define, maybe whole thing */
	status = "okay";

	button {
		label = "Encoder click";
		linux,code = <KEY_ENTER>;
		channel = <0>;
		voltage = <0>;
	};

	button@191 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <191274>;
	};

	button@392 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <392644>;
	};

	button@601 {
		label = "Menu";
		linux,code = <KEY_MENU>;
		channel = <0>;
		voltage = <601151>;
	};

	button@795 {
		label = "Search";
		linux,code = <KEY_SEARCH>;
		channel = <0>;
		voltage = <795090>;
	};

	button@987 {
		label = "Home";
		linux,code = <KEY_HOMEPAGE>;
		channel = <0>;
		voltage = <987387>;
	};

	button@1184 {
		label = "Esc";
		linux,code = <KEY_ESC>;
		channel = <0>;
		voltage = <1184678>;
	};

	button@1398 {
		label = "Enter";
		linux,code = <KEY_ENTER>;
		channel = <0>;
		voltage = <1398804>;
	};
};

&pio {
	hy4613_reset_pin_opinicus: reset_pins {
		pins = "PI16";
		function = "gpio_out";
		bias-pull-up;
	};

	led_pins_opinicus: led_pins {
		pins = "PH20", "PH21";
		function = "gpio_out";
		allwinner,drive = <SUN4I_PINCTRL_20_MA>;
		allwinner,pull = <SUN4I_PINCTRL_NO_PULL>;
	};

	oled_pins_opinicus: oled_pins {
		pins = "PI13";
		function = "gpio_out";
		allwinner,pull = <SUN4I_PINCTRL_PULL_DOWN>;
	};

	hd_display_power: hd_display_power_pins {
		pins = "PH8";
		function = "gpio_out";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
	};

	rotary_pins_opinicus: rotary_pins {
		pins = "PH0", "PH7";
		function = "gpio_in";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_UP>;
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm0_pins_a>, <&pwm1_pins_a>;
	status = "okay";
};

&rtp {
	allwinner,ts-attached;
	touchscreen-inverted-x;
};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";
};

&spi2 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi2_pins_a>;
	status = "okay";

	spidev@0 {
		compatible = "spidev";
		spi-max-frequency = <25000000>;
		reg = <0>;
	};
};

