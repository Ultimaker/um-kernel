#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

#include "imx7d-cl-som-imx7.dts"
#include "imx7d-pinfunc.h"

/ {
	model = "Opinicus carrierboard to the Compulab CL-SOM-iMX7";
	compatible = "ultimaker,opinicus-imx-emmc", "compulab,cl-som-imx7", "fsl,imx7d";

	aliases {
		serial1 = &uart5;
	};

	beeper {
		pwm-names = "opinicus-board-beeper";
		compatible = "pwm-beeper";
		pwms = <&pwm1 1 500000 0>;
		status = "okay";
	};

	leds {
		green {
			linux,default-trigger = "mmc0";
		};

		d1 {
			label = "opinicus:orange:d1";
			gpios = <&gpio3 15 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};

		d2 {
			label = "opinicus:orange:d2";
			gpios = <&gpio3 16 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	rotary {
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_rotary_encoder>;
		compatible = "rotary-encoder";
		gpios = <&gpio3 13 GPIO_ACTIVE_LOW>, <&gpio3 14 GPIO_ACTIVE_LOW>; /* todo; named gpios!! */
		linux,axis = <8>; /* REL_Z: TODO add to dt-include and possible add 'LEFT' axis */
		rotary-encoder,relative-axis;
		rotary-encoder,steps-per-period = <4>;
		status = "okay";
	};
};

&iomuxc {
	pinctrl_i2c4: i2c4grp {
		fsl,pins = <
			MX7D_PAD_I2C4_SDA__I2C4_SDA		0x4000007f
			MX7D_PAD_I2C4_SCL__I2C4_SCL		0x4000007f
		>;
	};

	pinctrl_pwm2: pwm2grp {
		fsl,pins = <
			MX7D_PAD_GPIO1_IO09__PWM2_OUT		0x7d
		>;
	};

	pinctrl_uart5: uart5grp {
		fsl,pins = <
			MX7D_PAD_I2C4_SCL__UART5_DCE_RX		0x7d
			MX7D_PAD_I2C4_SDA__UART5_DCE_TX		0x7d
		>;
	};

	pinctrl_oled_reset: dispgrp {
		fsl,pins = <
			MX7D_PAD_SD1_RESET_B__GPIO5_IO2		0x7d
		>;
	};

	pinctrl_rotary_encoder: encoder0grp {
		fsl,pins = <
			MX7D_PAD_LCD_DATA08__GPIO3_IO13		0x7d
			MX7D_PAD_LCD_DATA09__GPIO3_IO14		0x7d
		>;
	};

	pinctrl_leds: lcd2grp {
		fsl,pins = <
			MX7D_PAD_LCD_DATA10__GPIO3_IO15		0x7d
			MX7D_PAD_LCD_DATA11__GPIO3_IO16		0x7d
		>;
	};
};

&i2c2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c2>;
	clock-frequency = <50000>;
	status = "okay";
};

&i2c4 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c4>;
	clock-frequency = <400000>;
	status = "okay";

	ssd1309: oled@3c {
		compatible = "solomon,ssd1309fb-i2c";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_oled_reset>;
		reg = <0x3c>;
		reset-gpios = <&gpio5 2 GPIO_ACTIVE_HIGH>;
		solomon,width = <128>;
		solomon,height = <64>;
		solomon,com-invdir;
		solomon,page-offset = <0>;
		solomon,prechargep1 = <2>;
		solomon,prechargep2 = <8>;
	};

	pca9632: pca9632@60 {
		compatible = "nxp,pca9632";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x60>;
		nxp,totem-pole;
		nxp,inverted-out;
		nxp,hw-blink;

		red@0 {
			label = "red";
			reg = <0>;
			linux,default-trigger = "none";
		};

		green@1 {
			label = "green";
			reg = <1>;
			linux,default-trigger = "default-on";
		};

		blue@2 {
			label = "blue";
			reg = <2>;
			linux,default-trigger = "default-on";
		};

		unused@3 {
			label = "unused";
			reg = <3>;
			linux,default-trigger = "none";
		};
	};
};

&pwm2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm2>;
	status = "okay";
};

&ecspi1 {
	pinctrl-names = "default";
	status = "okay";
};

&ecspi2 {
	pinctrl-names = "default";
	status = "okay";

	spidev@0 {
		compatible = "spidev";
		spi-max-frequency = <25000000>;
		reg = <0>;
	};
};

&uart5 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart5>;
	status = "okay";
};
